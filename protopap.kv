#:kivy 1.4

<Protopap>:
    orientation: 'vertical'
    txtOutput: txtOutput
    #menubar
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Action Bar'
                with_previous: False
            ActionOverflow:
            ActionGroup:
                text: 'File'
                ActionButton:
                    text: 'Load...'
                    on_press: root.fileloadpop(*args)
                ActionButton:
                    text: 'Save...'
            ActionGroup:
                text: 'Help'
                ActionButton:
                    text: 'Help file'
                ActionButton:
                    text: 'Report a problem'
                ActionButton:
                    text: 'About'
                    on_press: root.helpaboutpop(*args)


#    #MainAppArea
    GridLayout:
        cols: 2
        #Nav column
        BoxLayout:
            size_hint: 0.2, 1
            orientation: 'vertical'
            Button:
                text: "Map"
            Button:
                text: "View"
            Button:
                text: "Nav3"
            Button:
                text: "Nav4"
            Button:
                text: "Nav5"
            Button:
                text: "Nav6"
            Button:
                text: "Nab7"

        #Main window
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: txtOutput
                multiline: True
                text: 'Multiline text out only'

            Label:
                text: "This is the main window for map"

<HelpAboutPopup>:
    title: "About Property Analysis App"
    size_hint: .5, .5
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Property Analysis App 1.0"
        Button:
            text: "Dismiss"
            size_hint_y: .25
            on_press: root.dismiss()

<FileLoadFilePopup>:
    title: "Load File..."
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
#        BoxLayout:
#            orientation: 'horizontal'
#            size_hint_y: .1
#            ToggleButton:
#                text: 'Icon'
#                state: 'down'
#                group: 'filechooser'
#                on_release: filechooser.view_mode = 'icon'
#
#            ToggleButton:
#                text: 'List'
#                group: 'filechooser'
#                on_release: filechooser.view_mode = 'list'

        FileChooserListView:
            id: filechooser
            size_hint_y: .9

            #FileChooserIconLayout
            #FileChooserListLayout
            on_selection: root.selected(filechooser.selection)


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: "Open"
                on_press:
                    root.open_file(filechooser.path, filechooser.selection)
                    root.dismiss()
            Button:
                text: "Cancel"
                #size_hint_y: .1
                on_press:
            #        app.root.txtFileName = flpFileName.text
                    root.dismiss()

